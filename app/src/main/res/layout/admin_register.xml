<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F4F4F4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="고객 등록"
                android:textColor="#22699A"
                android:textSize="20dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/idtext"
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/layout_border"
                    android:drawableLeft="@drawable/join_id"
                    android:drawableStart="@drawable/join_id"
                    android:drawablePadding="20dp"
                    android:hint=" 아이디"
                    android:padding="3dp"
                    android:textColor="#000000"
                     />

                <Button
                    android:id="@+id/validatebutton"
                    android:layout_width="90dp"
                    android:layout_height="30dp"

                    android:background="@drawable/layout_border"
                    android:text="체크"
                    android:textSize="15dp"
                    android:drawableEnd="@drawable/button1"
                    android:textColor="#000000"/>

            </LinearLayout>


            <EditText
                android:id="@+id/userPassword"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:drawableLeft="@drawable/join_pw"
                android:drawableStart="@drawable/join_pw"
                android:drawablePadding="20dp"
                android:hint="비밀번호"
                android:password="true"
                android:padding="3dp"
                android:textColor="#000000"
                 />

            <EditText
                android:id="@+id/userCompany"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:drawableStart="@drawable/join_comp"
                android:drawableLeft="@drawable/join_comp"
                android:drawablePadding="20dp"
                android:hint="거래처명"
                android:padding="3dp"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/editRepresentation"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:hint=" 대표자"
                android:padding="3dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/join_id"
                android:drawableLeft="@drawable/join_id"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/editCompanyNum"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:drawableStart="@drawable/join_ad"
                android:drawableLeft="@drawable/join_ad"
                android:drawablePadding="20dp"
                android:hint="사업자 번호"
                android:padding="3dp"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:drawablePadding="20dp"
                android:hint="전화번호"
                android:padding="3dp"
                android:drawableStart="@drawable/join_hp"
                android:drawableLeft="@drawable/join_hp"
                android:textColor="#000000"
                 />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/join_email"
                android:drawableStart="@drawable/join_email"
                android:hint="E-Mail"
                android:padding="3dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/editFax"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:drawablePadding="20dp"
                android:hint="팩스번호"
                android:padding="3dp"
                android:drawableStart="@drawable/join_fax"
                android:drawableLeft="@drawable/join_fax"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/editAddress"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:drawableStart="@drawable/join_ad"
                android:drawableLeft="@drawable/join_ad"
                android:drawablePadding="20dp"
                android:hint="주소"
                android:padding="3dp"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/editmK"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:drawableStart="@drawable/join_compressor"
                android:drawableLeft="@drawable/join_compressor"
                android:drawablePadding="20dp"
                android:hint="기기종류"
                android:padding="3dp"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/editAir"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:drawableStart="@drawable/join_compressor"
                android:drawableLeft="@drawable/join_compressor"
                android:drawablePadding="20dp"
                android:hint="압력"
                android:padding="3dp"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/edithour"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_border"
                android:drawableStart="@drawable/join_compressor"
                android:drawableLeft="@drawable/join_compressor"
                android:drawablePadding="20dp"
                android:hint="시간"
                android:padding="3dp"
                android:textColor="#000000"
                />

            <Button
                android:id="@+id/registerbtn"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_border"
                android:text="가입하기"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>