<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border">

    <ToggleButton
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:checked="true"
        android:textOn="요청승인"
        android:textOff="요청거절"
        android:textSize="20dp"
        android:drawableRight="@drawable/button1"
        android:background="@drawable/on_off_button"
        android:textColor="#FFFFFF"
        />


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f2f2f2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원명"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:padding="3dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/userCustomer_as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="회원명"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원장소"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:padding="3dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/comState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:gravity="right"
                android:text="회원장소"
                android:textSize="15dp"
                android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f2f2f2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AS날짜"
                android:textStyle="bold"
                android:padding="3dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/asDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="AS날짜"
                android:textColor="#4E5FA2"/>
                    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요청사항"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:padding="3dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/comState_as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:gravity="right"
                android:text="요청사항"
                android:textSize="15dp"
                android:textColor="#4E5FA2"/>

        </LinearLayout>




    </LinearLayout>



</LinearLayout>